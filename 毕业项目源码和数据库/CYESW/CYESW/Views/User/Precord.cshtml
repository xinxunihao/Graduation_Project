
@using PagedList.Mvc
@model PagedList.PagedList<CYESW.Models.ChongZhi>

<div class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert"
            aria-hidden="true">
        &times;
    </button>
    欢迎来到 <span style="font-size:16px;color:orangered">@TempData["Title"]</span> 板块！为您查询到 <span style="font-size:16px;color:orangered">@Model.TotalItemCount</span> 条收藏信息！
</div>
<div class="tab_content">
    <div class="row beizhu_div_top" >
        <div class="col-lg-2">
            充值金额
        </div>
        <div class="col-lg-2">
            获得金币
        </div>
        <div class="col-lg-3">
            充值时间
        </div>
        <div class="col-lg-5">
            备注
        </div>
    </div>
    @foreach (var item in Model)
    {
<div class="row beizhu_div">
    <div class="col-lg-2" style="line-height:75px">
        @string.Format("{0:C}",item.rmb )
    </div>
    <div class="col-lg-2" style="line-height:75px">
        @item.moneys
        <img src="~/images/icopng/金 币.png" />
    </div>
    <div class="col-lg-3" style="line-height:75px">
        @item.addtime
    </div>
    <div class="col-lg-5" style="line-height:75px;font-size:18px">
        @item.type_1 <a href="#" style="font-size:12px" onclick="confirm('请自行联系客服qq：3089218762 \n或发送邮件至：3303898033@qq.com')">对此订单有疑问？</a>
        
    </div>
</div>
    }

</div>
<div style="padding:10px;text-align:center;background-color:white;border-radius:15px">
    当前页/总页数（ @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount ）

    @Html.PagedListPager(Model, page => Url.Action("UserIndex", new
    {
        page,sextype=8
    }))
</div>