
@model PagedList.PagedList<CYESW.Models.UserInfo>
@using PagedList.Mvc

@{

    ViewBag.Title = "书籍查询";
}
<h2>书籍查询</h2>
@using (Html.BeginForm("SearchIndex", "User", FormMethod.Get))
{
    <p>
        书籍名称： @Html.TextBox("SearchString")
        <input type="submit" value="查询" />
    </p>
}
<div>
    <table class="table table-hover">
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserPwd)

                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |

                    @Html.ActionLink("Details", "Details", new { id = item.UserId }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId })

                </td>
            </tr>
        }
    </table>
</div>
<div>
    当前页/总页数（ @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount ）

    @Html.PagedListPager(Model, page => Url.Action("SearchIndex", new
    {
        page
    }))
</div>


